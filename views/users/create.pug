extends ../layout/header.pug
block header
    if errs
        each err in errs
            .alert.alert-danger #{err}
    form(action="/users/create", method="post",enctype="multipart/form-data" )
        label(for="") Name
        input(type="text", name="name" , value=value ?value.name: '')
        label(for="") Phone
        input(type="text", name="phone", value=value ?value.phone: '')
        label(for='user') Email
        input#user(type='text', name='email', required='',value= value?value.email:'')
        label(for='password') Password
        input#password(type='password', name='pass', required='')
        input.form-control-file(type='file',name='avatar')
        button(type="submit") Create


